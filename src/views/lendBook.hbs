    <input class="col-75" type="number" name="bookCopy" value="" disabled>
  </div>
  <div class="field">
    <label for="" class="col-25"># of copy reserved</label>
    <input  class="col-75" type="number" name="reservedCopy" value="" disabled>
  </div>
  <div class="field">
    <label for="" class="col-25"># of copy available</label>
    <input  class="col-75" type="number" name="availableCopy" value="" disabled>
  </div>
  <div class="field">
    <label for="" class="col-25">Lending Date</label>
    <input class="col-75" type="date" name="lendingDate" value="">
  </div>
  <div class="field">
    <label for="" class="col-25">End Date</label>
    <input class="col-75" type="date" name="endDate" value="">
  </div>
  <div class="field">
    <label class="notification col-25"></label>
  </div>
   <label for="" class="col-25"></label>
  <button type="submit" name="button" disabled>Lend</button>

</div>
